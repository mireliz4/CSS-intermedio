/* Estilos generales para el documento HTML */
html {
    margin: 0; /* Elimina el margen predeterminado del documento */
    padding: 0; /* Elimina el relleno predeterminado del documento */
    box-sizing: border-box; /* Incluye el borde y el relleno en el ancho y alto total del elemento */
    font-family: Funnel Display, sans-serif; /* Define la fuente de texto para el documento */
}

/* Estilos para el contenedor de las tarjetas */
.cards {
    display: flex; /* Utiliza flexbox para organizar las tarjetas en fila */
}

/* Estilos para cada tarjeta individual */
.card {
    flex: 50px; /* Define el tamaño flexible de la tarjeta */
    margin: 60px; /* Añade un margen alrededor de la tarjeta */
    border: 5px solid navy; /* Añade un borde azul marino a la tarjeta */
    display: flex; /* Utiliza flexbox para organizar el contenido de la tarjeta en columna */
    flex-direction: column; /* Organiza el contenido de la tarjeta en columna */
    background-size: cover; /* Ajusta el tamaño de la imagen de fondo para cubrir todo el elemento */
    border-radius: 10px; /* Redondea las esquinas de la tarjeta con un radio de 10 píxeles */
    transition: all 0.3s ease; /* Añade una transición suave a todos los cambios de propiedades */
}

/* Estilos para el contenido principal de la tarjeta */
.card .content {
    text-align: center; /* Centra el texto dentro del contenido */
    flex-grow: 1; /* Permite que el contenido crezca para ocupar el espacio disponible */
    flex-shrink: 1; /* Permite que el contenido se reduzca si es necesario */
}

/* Estilos para el pie de la tarjeta */
.card .footer {
    background-color: blue; /* Define el color de fondo del pie de la tarjeta */
    padding: 25px; /* Añade un relleno alrededor del contenido del pie de la tarjeta */
    text-align: center; /* Centra el texto dentro del pie de la tarjeta */
}

/* Estilos para la imagen del personaje dentro de la tarjeta */
.personaje {
    width: 150px; /* Define el ancho de la imagen del personaje */
    height: 150px; /* Define el alto de la imagen del personaje */
    position: relative; /* Permite posicionar la imagen relativamente a su posición normal */
    margin: 50px; /* Añade un margen alrededor de la imagen del personaje */
}

/* Estilos para el efecto hover en la tarjeta */
.card:hover {
    background-color: lightblue; /* Cambia el color de fondo al pasar el cursor */
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); /* Añade una sombra al pasar el cursor */
    transform: scale(1.05); /* Aumenta el tamaño en un 5% al pasar el cursor */
}